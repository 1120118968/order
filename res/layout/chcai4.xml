<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
       android:layout_marginLeft="80dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/cimage"
        android:background="@drawable/cmapodoufuxie"/>
      <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp">
         <Button 
        android:layout_width="80dp"
        android:layout_height="50dp"
         android:text="选菜"
         android:textColor="#FFFFFF"
         android:background="#9ACD32"
        android:id="@+id/chuancaixuancai"
        android:layout_marginTop="0dp"
        />
         <ImageButton
        android:id="@+id/cfangda"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/fangfajing"
        android:layout_marginLeft="5dp" />
        <ImageButton 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/csuoxiao"
            android:background="@drawable/xuanzhuan"
             android:layout_marginLeft="5dp"/>
         <Button 
        android:layout_width="80dp"
        android:layout_height="50dp"
       android:layout_marginLeft="5dp"
        android:text="返回"
        android:textColor="#FFFFFF"
        android:background="#9ACD32"
        android:id="@+id/chuancaiexit1"
        />
     </LinearLayout>
    </LinearLayout>