<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/jieshao"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汤" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="金额/元" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="数量/碗" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textbocaifensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菠菜粉丝汤" />

            <TextView
                android:id="@+id/texttbocaifensi33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="33" />

            <EditText
                android:id="@+id/editbocaifensi"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:maxHeight="48dp"
                android:maxLines="2"
                android:maxWidth="27dp"
                android:singleLine="true"
                android:text="1" />

            <CheckBox
                android:id="@+id/checkbocaifensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textdongguapaigu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冬瓜排骨汤" />

            <TextView
                android:id="@+id/textdongguapaigu50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="50" />

            <EditText
                android:id="@+id/editdongguapaigu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:maxHeight="48dp"
                android:maxLines="2"
                android:maxWidth="27dp"
                android:singleLine="true"
                android:text="1" />

            <CheckBox
                android:id="@+id/checkdongguapaigu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textdongguawanzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冬瓜丸子汤" />

            <TextView
                android:id="@+id/textdongguawanzi40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="40" />

            <EditText
                android:id="@+id/editdongguawanzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:maxHeight="48dp"
                android:maxLines="2"
                android:maxWidth="27dp"
                android:singleLine="true"
                android:text="1" />

            <CheckBox
                android:id="@+id/checkdongguawanzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textpaigudoufu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排骨豆腐汤" />

            <TextView
                android:id="@+id/textpaigudoufu56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="56" />

            <EditText
                android:id="@+id/editpaigudoufu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:maxHeight="48dp"
                android:maxLines="2"
                android:maxWidth="27dp"
                android:singleLine="true"
                android:text="1" />

            <CheckBox
                android:id="@+id/checkpaigudoufu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textqingdungezi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清炖鸽子汤" />

            <TextView
                android:id="@+id/textqingdungezi66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="66" />

            <EditText
                android:id="@+id/editqingdungezi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:maxHeight="48dp"
                android:maxLines="2"
                android:maxWidth="27dp"
                android:singleLine="true"
                android:text="1" />

            <CheckBox
                android:id="@+id/checkqingdungezi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/tangxiaofeijine"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:hint="/消费金额" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tangdiancanx0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="我的消费" />

        <Button
            android:id="@+id/tangexitx1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="返回主菜单" />
    </LinearLayout>

</LinearLayout>