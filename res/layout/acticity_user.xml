<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
            android:background="#ffffff"
    android:orientation="vertical">
    <EditText
        android:id="@+id/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:text="员工管理"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                android:background="#ffffff"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:text="增加">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:text="删除">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:text="修改">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select"
            android:text="查询">

        </Button>

        <Button
            android:id="@+id/customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户管理" />

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
   >
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="编号"
      android:textAlignment="center"
        android:layout_weight="0.3"
       >

    </EditText>

    <EditText
        android:layout_width="wrap_content"
         android:textAlignment="center"
        android:layout_height="wrap_content"
  android:text="姓名"
        android:layout_weight="0.3"
      >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
         android:textAlignment="center"
      android:layout_weight="0.3"
   >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="年龄"
          android:textAlignment="center"
        android:layout_weight="0.3"
  >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  android:text="健康"
   android:textAlignment="center"
        android:layout_weight="0.3"
>

    </EditText>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  android:text="号码"
   android:textAlignment="center"
        android:layout_weight="0.3"
  >

    </EditText>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/aid">

    </EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/aname">

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/asex">

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/aage">

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/ahealth">

    </EditText>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/aphonenumber">

    </EditText>
</LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"
        android:background="@drawable/first">

    </ListView>
</LinearLayout>