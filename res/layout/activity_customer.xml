<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:text="客户管理"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add1"
            android:text="增加">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete1"
            android:text="删除">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update1"
            android:text="修改">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select1"
            android:text="查询">

        </Button>

        

    </LinearLayout>
         <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="#ffffff"
    android:orientation="horizontal"
   >
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="编号"
      android:textAlignment="center"
        android:layout_weight="0.3"
       >

    </EditText>

    <EditText
        android:layout_width="wrap_content"
         android:textAlignment="center"
        android:layout_height="wrap_content"
  android:text="姓名"
        android:layout_weight="0.3"
      >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
         android:textAlignment="center"
      android:layout_weight="0.3"
   >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="年龄"
          android:textAlignment="center"
        android:layout_weight="0.3"
  >

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  android:text="健康"
   android:textAlignment="center"
        android:layout_weight="0.3"
>

    </EditText>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  android:text="号码"
   android:textAlignment="center"
        android:layout_weight="0.3"
  >
  </EditText>
  </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
       android:background="#ffffff"
   >
   <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/aid1">

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/aname1">

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/asex1">

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/aage1">

    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/ahealth1">

    </EditText>
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0.3"
        android:id="@+id/aphonenumber1">

    </EditText>
</LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview1"
        android:background="@drawable/first">

    </ListView>
</LinearLayout>