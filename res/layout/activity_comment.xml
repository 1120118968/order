<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/jieshao">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ratingBar1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/ratingBar1"
          android:textColor="#000000"
        android:text="菜品" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ratingBar2"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="16dp"
          android:textColor="#000000"
        android:text="服务" />

    <Button
        android:id="@+id/publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="发布" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ratingBar1"
        android:layout_marginTop="35dp" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/publish"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/edt_fankui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar2"
        android:layout_centerHorizontal="true"
        android:ems="10"
          android:textColor="#000000"
        android:hint="请您填写反馈......" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edt_fankui"
        android:layout_below="@+id/publish"
        android:text="请您对我们的菜品和服务做出评价"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>